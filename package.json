{
  "name": "ACID-RESTful-OA",
  "version": "0.1.0",
  "description": "Test suite webapp for RESTful OA / JSON-LD servers",
  "author": "Juan Miguel Cejuela",
  "license": "ISC",
  "keywords": [
    "RESTful",
    "OpenAnnotation",
    "JSON-LD"
  ],
  "main": "server/main.js",
  "engines": {
    "node": "0.12.x"
  },
  "dependencies": {
    "bootstrap": "^3.3.4",
    "express": "^4.12.3",
    "jquery": "^2.1.3",
    "lodash": "^3.5.0",
    "react": "^0.13.1",
    "react-loader": "^1.2.0",
    "request": "^2.53.0",
    "tv4": "^1.1.8"
  },
  "devDependencies": {
    "jshint": "latest",
    "jsxhint": "latest",
    "jscs": "latest",
    "esprima-fb": "12001.1.0-dev-harmony-fb",
    "browserify": "latest",
    "watchify": "latest",
    "minifyify": "latest"
  },
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "es6": true
        }
      ]
    ]
  },
  "scripts": {
    "client-build": "browserify client.js | uglifyjs -c > public/dist/bundle.min.js",
    "client-watch": "watchify client.js -o public/dist/bundle.min.js",
    "server-watch": "runjs server/main.js",
    "watch": "npm run server-watch & npm run client-watch",
    "start": "node server/main.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
